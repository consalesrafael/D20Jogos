<%- include ("../partials/header") %>

<body>
  <%- include ("../partials/navBar") %>

  <div class="container my-5 text-white">

    <a href="/" class="btn btn-outline-secondary mb-4">
      <i class="fas fa-arrow-left me-2"></i>Voltar
    </a>

    <div class="row">
      <div class="col-lg-7">
        <div class="main-image-container mb-3">
          <img src="<%= jogo.caminho_foto %>" class="img-fluid rounded" id="mainProductImage" alt="Imagem principal do produto">
        </div>
        <div class="product-thumbnails d-flex gap-3">

        </div>
      </div>

      <div class="col-lg-5">
        <div class="product-info p-4 rounded">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="fw-bold"><%= jogo.nome %></h2>
            <div class="product-actions">
              <a href="#" class="text-white me-2"><i class="fas fa-share-alt"></i></a>
              <a href="#" class="text-white"><i class="fas fa-ellipsis-v"></i></a>
            </div>
          </div>

          <p class="lead my-4">
            <%=jogo.categoria %>
          </p>

          <div class="d-flex gap-2">
            <button class="btn btn-warning btn-lg flex-grow-1 fw-bold">alugar</button>
            <button class="btn btn-warning btn-lg">
              <i class="fas fa-heart"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ("../partials/footer") %>


  </body>

<style>
  body {
    background-color: #212529;
  }

  .product-info {
    background-color: #343a40; /* Um cinza um pouco mais claro que o fundo */
  }

  .product-thumbnails img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .product-thumbnails img:hover {
    border-color: #6c757d;
  }

  .product-thumbnails img.active {
    border-color: #ffc107; /* Cor amarela para destacar */
  }

  .btn-warning {
    background-color: #ffc107;
    border-color: #ffc107;
    color: #212529; /* Texto escuro para melhor contraste */
  }

  .product-actions i {
    font-size: 1.2rem;
  }
</style>