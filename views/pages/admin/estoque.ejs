<%- include ("../../partials/header") %>

<body>
    <%- include ("../../partials/sideBarAdm") %>
    
    </aside>

    <main class="main-content">
        <header class="header">
            <div class="search-bar">
                <i class="fas fa-search" style="color: var(--text-secondary);"></i>
                <input type="text" placeholder="Pesquisar no estoque...">
            </div>
            <div class="header-actions">
                <button class="btn-primary" data-bs-toggle="modal" data-bs-target="#addGameModal"><i class="fas fa-plus"></i> Adicionar Jogo</button>
                <i class="fas fa-bell icon"></i>
                <i class="fas fa-user-circle icon"></i>
            </div>
        </header>
            
        <section class="stock-management">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Gerenciamento de Estoque</h2>
                    <div class="card-actions">
                        <button class="btn-secondary"><i class="fas fa-filter"></i> Filtrar</button>
                        <button class="btn-secondary"><i class="fas fa-file-export"></i> Exportar</button>
                    </div>
                </div>

                <div class="table-container">
                    <table class="stock-table">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>ID</th>
                                <th>Categoria</th>
                                <th class="text-center">Estoque</th>
                                <th>Preço</th>
                                <th>Status</th>
                                <th class="text-center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% Jogo.forEach(jogo => { %>
                                <tr>
                                    <td>
                                        <div class="product-info">
                                            <img src="<%= jogo.caminho_foto %>" alt="<%= jogo.nome %>">
                                            <span><%= jogo.nome %></span>
                                        </div>
                                    </td>
                                    <td><%= jogo.id %></td>
                                    <td><%= jogo.descricao %></td>
                                    <td class="text-center"><%= jogo.quantidade %></td>
                                    <td>R$ <%= parseFloat(jogo.preco).toFixed(2).replace('.', ',') %></td>
                                    <td>
                                        <% if (jogo.quantidade > 10) { %>
                                            <span class="status-badge status-in-stock">Em Estoque</span>
                                        <% } else if (jogo.quantidade > 0) { %>
                                            <span class="status-badge status-low-stock">Estoque Baixo</span>
                                        <% } else { %>
                                            <span class="status-badge status-out-of-stock">Fora de Estoque</span>
                                        <% } %>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-icons">
                                           <a href="#" class="edit-game-btn" 
                                            data-id="<%= jogo.id %>" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#editGameModal"
                                            title="Editar">
                                             <i class="fas fa-pencil-alt"></i>
                                         </a>
                                            <form action="/jogos/deletar/<%= jogo.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Você tem certeza que deseja apagar este jogo?');">
                                                <button type="submit" class="btn btn-link p-0 m-0 align-baseline" title="Apagar">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                
                 <div class="pagination">
                    <button class="btn-secondary">Anterior</button>
                    <span>Página 1 de 10</span>
                    <button class="btn-secondary">Próximo</button>
                </div>
            </div>
        </section>
    </main>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const editButtons = document.querySelectorAll('.edit-game-btn');
    
            editButtons.forEach(button => {
                button.addEventListener('click', async (event) => {
                    
                    // 1. O ID é pego do ATRIBUTO 'data-id' do botão clicado
                    const gameId = button.dataset.id; 
    
                    try {
                        // 2. O ID é usado para buscar os dados do jogo na sua API
                        const response = await fetch(`/api/jogos/${gameId}`);
                        const jogo = await response.json();
    
                        // 3. Os dados preenchem o formulário
                        document.getElementById('editGameName').value = jogo.nome;
                        document.getElementById('editGameCategory').value = jogo.descricao;
                        document.getElementById('editGameStock').value = jogo.quantidade;
                        document.getElementById('editGamePrice').value = parseFloat(jogo.preco).toFixed(2);
                        
                        // 4. AQUI O ID É INJETADO NO 'action' DO FORMULÁRIO
                        const editForm = document.getElementById('editGameForm');
                        editForm.action = `/jogos/editar/${gameId}`; // Define a URL de envio correta
    
                    } catch (error) {
                        console.error('Erro ao buscar dados do jogo:', error);
                    }
                });
            });
        });
    </script>
    <%- include ("../../partials/modals") %>
</body>

<style>
    :root {
        --bg-color: #121212;
        --surface-color: #1E1E1E;
        --primary-color: #E53935;
        --text-primary: #FFFFFF;
        --text-secondary: #CCCCCC;
        --border-color: #2c2c2c;
        --green-accent: #4CAF50;
        --orange-accent: #FF9800;
        --red-accent: #F44336;
    }
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }
    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        display: flex;
        height: 100vh;
        overflow: hidden;
    }
    .main-content {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
    }
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    .search-bar {
        background-color: var(--surface-color);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        width: 300px;
    }
    .search-bar input {
        background: none;
        border: none;
        outline: none;
        color: var(--text-primary);
        margin-left: 0.5rem;
        width: 100%;
    }
    .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .btn-primary {
        background-color: var(--primary-color);
        color: var(--text-primary);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .btn-primary:hover { background-color: #c62828; }
    .header-actions .icon {
        font-size: 1.5rem;
        color: var(--text-secondary);
        cursor: pointer;
    }
    .btn-secondary {
        background: none;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s, border-color 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
    }
    .btn-secondary:hover {
        background-color: var(--border-color);
        border-color: var(--text-secondary);
    }
    .card {
        background-color: var(--surface-color);
        border-radius: 12px;
        border: 1px solid var(--border-color);
    }
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }
    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
        color: var(--text-primary);
    }
    .card-actions {
        display: flex;
        gap: 1rem;
    }
    .table-container {
        overflow-x: auto;
    }
    .stock-table {
        width: 100%;
        border-collapse: collapse;
    }
    .stock-table th, .stock-table td {
        padding: 1rem 1.5rem;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }
    .stock-table thead th {
        color: var(--text-secondary);
        font-weight: 500;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .stock-table tbody td {
        color: var(--text-primary);
    }
    .stock-table tbody tr:hover {
        background-color: #2a2a2a;
    }
    .product-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: var(--text-primary);
    }
    .product-info img {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        object-fit: cover;
    }
    .text-center { text-align: center !important; }
    .status-badge {
        padding: 0.3rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
    }
    .status-in-stock {
        background-color: rgba(76, 175, 80, 0.2);
        color: var(--green-accent);
    }
    .status-low-stock {
        background-color: rgba(255, 152, 0, 0.2);
        color: var(--orange-accent);
    }
    .status-out-of-stock {
        background-color: rgba(244, 67, 54, 0.2);
        color: var(--red-accent);
    }
    .action-icons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }
    .action-icons a, .action-icons button {
        color: var(--text-secondary);
        transition: color 0.3s;
        background: none;
        border: none;
        cursor: pointer;
    }
    .action-icons a:hover, .action-icons button:hover {
        color: var(--primary-color);
    }
    .action-icons i {
        font-size: 1rem;
    }
    .pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        color: var(--text-secondary);
        border-top: 1px solid var(--border-color);
    }
</style>