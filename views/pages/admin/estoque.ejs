<style>
    :root {
        --bg-color: #121212;
        --surface-color: #1E1E1E;
        --primary-color: #E53935;

        /* Ajuste de contraste */
        --text-primary: #FFFFFF;   /* Branco puro */
        --text-secondary: #CCCCCC; /* Cinza claro mais legível */

        --border-color: #2c2c2c;
        --green-accent: #4CAF50;
        --orange-accent: #FF9800;
        --red-accent: #F44336;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    /* Sidebar */
    .sidebar {
        width: 240px;
        background-color: var(--surface-color);
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        border-right: 1px solid var(--border-color);
    }

    .sidebar-header {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        color: var(--text-primary);
    }

    .sidebar-header .fa-dice-d20 {
        color: var(--primary-color);
    }

    .sidebar-nav ul { list-style: none; }
    .sidebar-nav li { margin-bottom: 1rem; }
    .sidebar-nav a {
        color: var(--text-secondary);
        text-decoration: none;
        display: flex;
        align-items: center;
        padding: 0.75rem;
        border-radius: 8px;
        transition: background-color 0.3s, color 0.3s;
    }
    .sidebar-nav a.active, .sidebar-nav a:hover {
        background-color: var(--primary-color);
        color: var(--text-primary);
    }
    .sidebar-nav a.active .icon, .sidebar-nav a:hover .icon {
        color: var(--text-primary);
    }
    .sidebar-nav .icon {
        margin-right: 1rem;
        font-size: 1.2rem;
        width: 20px;
        text-align: center;
    }
    .sidebar-footer { margin-top: auto; }

    /* Main Content */
    .main-content {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
    }

    /* Header */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    .search-bar {
        background-color: var(--surface-color);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        display: flex;
        align-items: center;
        width: 300px;
    }
    .search-bar input {
        background: none;
        border: none;
        outline: none;
        color: var(--text-primary);
        margin-left: 0.5rem;
        width: 100%;
    }
    .header-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    .btn-primary {
        background-color: var(--primary-color);
        color: var(--text-primary);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .btn-primary:hover { background-color: #c62828; }
    .header-actions .icon {
        font-size: 1.5rem;
        color: var(--text-secondary);
        cursor: pointer;
    }
    .btn-secondary {
        background: none;
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s, border-color 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
    }
    .btn-secondary:hover {
        background-color: var(--border-color);
        border-color: var(--text-secondary);
    }

    /* Estoque */
    .card {
        background-color: var(--surface-color);
        border-radius: 12px;
        border: 1px solid var(--border-color);
    }
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
    }
    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
        color: var(--text-primary);
    }
    .card-actions {
        display: flex;
        gap: 1rem;
    }
    .table-container {
        overflow-x: auto;
    }
    .stock-table {
        width: 100%;
        border-collapse: collapse;
    }
    .stock-table th, .stock-table td {
        padding: 1rem 1.5rem;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }
    .stock-table thead th {
        color: var(--text-secondary);
        font-weight: 500;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .stock-table tbody td {
        color: var(--text-primary);
    }
    .stock-table tbody tr:hover {
        background-color: #2a2a2a;
    }
    .product-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: var(--text-primary);
    }
    .product-info img {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        object-fit: cover;
    }
    .text-center { text-align: center !important; }

    /* Status Badges */
    .status-badge {
        padding: 0.3rem 0.75rem;
        border-radius: 12px;
        font-size: 0.8rem;
        font-weight: 500;
        display: inline-block;
    }
    .status-in-stock {
        background-color: rgba(76, 175, 80, 0.2);
        color: var(--green-accent);
    }
    .status-low-stock {
        background-color: rgba(255, 152, 0, 0.2);
        color: var(--orange-accent);
    }
    .status-out-of-stock {
        background-color: rgba(244, 67, 54, 0.2);
        color: var(--red-accent);
    }

    /* Ações */
    .action-icons {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }
    .action-icons i {
        cursor: pointer;
        color: var(--text-secondary);
        transition: color 0.3s;
    }
    .action-icons i:hover {
        color: var(--primary-color);
    }

    /* Paginação */
    .pagination {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        color: var(--text-secondary);
        border-top: 1px solid var(--border-color);
    }
</style>
