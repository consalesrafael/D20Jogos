  <div class="banner-container">
    <img src="/imgs/Gemini_Generated_Image_33y8de33y8de33y8.png" class="img-fluid w-100" alt="Banner principal">
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
    </div>
  </div>
  <div class="container my-5">
    <div class="d-flex justify-content-center">
      <div class="border-bottom border-danger border-3 pb-2 mb-4">
        <h2 class="text-danger">Promoção Semanal</h2>
      </div>
    </div>

    <div class="card bg-dark text-white border-0 product-card">
      <div class="row g-0 align-items-center">
