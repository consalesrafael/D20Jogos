<%- include ("partials/header") %>

<body>
  <%- include ("partials/navBar") %>
  <div class="banner-container">
    <img src="/imgs/Gemini_Generated_Image_33y8de33y8de33y8.png" class="img-fluid w-100" alt="Banner principal">
    <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
    </div>
  </div>
  <div class="container my-5">
    <div class="d-flex justify-content-center">
      <div class="border-bottom border-danger border-3 pb-2 mb-4">
        <h2 class="text-danger">Promoção Semanal</h2>
      </div>
    </div>
    <%- include ("partials/modals") %>
    <div class="card bg-dark text-white border-0 product-card">
      <div class="row g-0 align-items-center">
        <div class="col-md-3">
          <img src="/imgs/Senhor.png" class="img-fluid rounded-start" alt="O Senhor dos Anéis: Jornadas na Terra Média">
        </div>
        <div class="col-md-9">
          <div class="card-body p-4">
            <h3 class="card-title">O Senhor dos Anéis: Jornadas na Terra Média</h3>
            <p class="card-text text-decoration-line-through">R$ 299,99</p>
            <h4 class="card-text text-danger fs-2 fw-bold">R$ 249,99</h4>
            <a href="/pages/buyPage" class="btn btn-danger w-50 rounded-0">Comprar</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container my-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% Jogo.forEach(jogo => { %>
      <div class="col">
        <div class="card h-100 bg-dark text-white border-0 product-card">
          <img src="<%= jogo.caminho_foto %>" class="card-img-top" alt="<%= jogo.nome %>">
          <div class="card-body text-center">
            <h5 class="card-title"><%= jogo.nome %></h5>
            <p class="card-text">R$ <%= parseFloat(jogo.preco).toFixed(2).replace('.', ',') %></p>
          </div>
          <div class="card-footer bg-transparent border-0 d-flex flex-column gap-2 p-3">
            <button class="btn btn-danger w-100 rounded-0">Comprar</button>
            <button class="btn btn-warning w-100 rounded-0">Alugar</button>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <%- include ("partials/footer") %>
</body>

<style>
  body {
    background-color: #212529;
  }

  .card {
    border: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .card-title {
    font-weight: bold;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease-in-out;
  }

  .btn-danger,
  .btn-warning {
    border-radius: 0;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .btn-warning {
    background-color: #ffc107;
    border-color: #ffc107;
  }

  .img-fluid.w-100 {
    height: 400px;
    object-fit: cover;
  }

  .banner-container {
    position: relative;
    height: 400px;
    overflow: hidden;
  }

  .product-card {
    border-radius: 0px !important;
    overflow: hidden;
  }

  .navbar {
    background-color: #1a1a1a !important;
  }

  .navbar-nav.mx-auto {
    font-size: 1.1em;
  }

  .navbar-nav.mx-auto .nav-link {
    padding: 0.5rem 1.5rem;
    color: #f8f9fa;
  }

  .navbar-nav.mx-auto .nav-link:hover {
    color: #ffc107;
  }

  .form-control {
    background-color: #343a40;
    border: 1px solid #495057;
    color: #fff;
  }

  .form-control::placeholder {
    color: #adb5bd;
  }

  .btn-outline-light {
    color: #f8f9fa;
    border-color: #f8f9fa;
  }

  .navbar-nav .nav-link .fa-user,
  .navbar-nav .nav-link .fa-shopping-cart {
    font-size: 1.2em;
  }

  .btn-outline-danger {
    color: #dc3545;
    border-color: #dc3545;
  }

  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: #fff;
  }
</style>